{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  name: 'EditItem',\n  data() {\n    return {\n      itemId: null,\n      itemName: '',\n      itemCategory: null,\n      itemDescription: '',\n      categories: [],\n      selectedFile: null,\n      imageUrl: ''\n    };\n  },\n  methods: {\n    onFileChange(event) {\n      this.selectedFile = event.target.files[0];\n    },\n    async uploadFile() {\n      if (!this.selectedFile) return this.imageUrl;\n      const formData = new FormData();\n      formData.append('file', this.selectedFile);\n      try {\n        const response = await axios.post(`${process.env.VUE_APP_BACKEND_URL}/upload`, formData, {\n          headers: {\n            'Content-Type': 'multipart/form-data'\n          }\n        });\n        return response.data.filePath;\n      } catch (error) {\n        console.error('파일 업로드 실패:', error);\n        return '';\n      }\n    },\n    async saveItem() {\n      if (!this.itemName || !this.itemCategory) {\n        alert('아이템 이름과 카테고리를 선택해주세요.');\n        return;\n      }\n      const imageUrl = await this.uploadFile();\n      const itemData = {\n        name: this.itemName,\n        categoryId: this.itemCategory,\n        imageUrl,\n        description: this.itemDescription\n      };\n      axios.put(`${process.env.VUE_APP_BACKEND_URL}/items/${this.itemId}`, itemData).then(() => {\n        alert('아이템이 성공적으로 수정되었습니다.');\n        this.$router.push('/');\n      }).catch(error => {\n        console.error('아이템 수정 실패:', error);\n      });\n    },\n    fetchItemDetails() {\n      const itemId = this.$route.params.id;\n      if (itemId) {\n        axios.get(`${process.env.VUE_APP_BACKEND_URL}/items/${itemId}`).then(response => {\n          const item = response.data;\n          this.itemId = item.id;\n          this.itemName = item.name;\n          this.itemCategory = item.category_id;\n          this.itemDescription = item.description;\n          this.