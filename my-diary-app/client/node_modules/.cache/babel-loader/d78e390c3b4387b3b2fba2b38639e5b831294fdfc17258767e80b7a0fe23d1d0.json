n: '',\r\n        categories: [],\r\n        selectedFile: null,\r\n        imageUrl: ''\r\n      };\r\n    },\r\n    methods: {\r\n      onFileChange(event) {\r\n        this.selectedFile = event.target.files[0];\r\n      },\r\n      async uploadFile() {\r\n        if (!this.selectedFile) return this.imageUrl;\r\n  \r\n        const formData = new FormData();\r\n        formData.append('file', this.selectedFile);\r\n  \r\n        try {\r\n          const response = await axios.post(`${process.env.VUE_APP_BACKEND_URL}/upload`, formData, {\r\n            headers: {\r\n              'Content-Type': 'multipart/form-data'\r\n            }\r\n          });\r\n          return response.data.filePath;\r\n        } catch (error) {\r\n          console.error('파일 업로드 실패:', error);\r\n          return '';\r\n        }\r\n      },\r\n      async saveItem() {\r\n        if (!this.itemName || !this.itemCategory) {\r\n          alert('아이템 이름과 카테고리를 선택해주세요.');\r\n          return;\r\n        }\r\n  \r\n        const imageUrl = await this.uploadFile();\r\n  \r\n        const itemData = {\r\n          name: this.itemName,\r\n          categoryId: this.itemCategory,\r\n          imageUrl,\r\n          description: this.itemDescription\r\n        };\r\n  \r\n        axios.put(`${process.env.VUE_APP_BACKEND_URL}/items/${this.itemId}`, itemData)\r\n          .then(() => {\r\n            alert('아이템이 성공적으로 수정되었습니다.');\r\n            this.$router.push('/');\r\n          })\r\n          .catch(error => {\r\n            console.error('아이템 수정 실패:', error);\r\n          });\r\n      },\r\n      fetchItemDetails() {\r\n        const itemId = this.$route.params.id;\r\n        if (itemId) {\r\n          axios.get(`${process.env.VUE_APP_BACKEND_URL}/items/${itemId}`)\r\n            .then(response => {\r\n              const item = response.data;\r\n              this.itemId = item.id;\r\n              this.itemName = item.name;\r\n              this.itemCategory = item.category_id;\r\n              this.itemDescription = item.description;\r\n              this.imageUrl = item.image_url;\r\n            })\r\n            .catch(error => {\r\n              console.error('Error fetching item details:', error);\r\n            });\r\n        }\r\n      },\r\n      fetchCategories() {\r\n        axios.get(`${process.env.VUE_APP_BACKEND_URL}/categories`)\r\n          .then(response => {\r\n            this.categories = response.data;\r\n          })\r\n          .catch(error => {\r\n            console.error('Error fetching categories:', error);\r\n          });\r\n      }\r\n    },\r\n    created() {\r\n      this.fetchCategories();\r\n      this.fetchItemDetails();\r\n    }\r\n  };\r\n  </script>\r\n  \r\n  <style>\r\n  .edit-item-page {\r\n    margin-top: 20px;\r\n    padding: 20px;\r\n    border: 1px solid #ddd;\r\n    display: flex;\r\n    flex-direction: column;\r\n    align-items: center;\r\n  }\r\n  .edit-item-page input,\r\n  .edit-item-page select,\r\n  .edit-item-page textarea {\r\n    padding: 10px;\r\n    font-size: 16px;\r\n    margin-bottom: 10px;\r\n  }\r\n  .edit-item-page button {\r\n    padding: 10px 20px;\r\n    font-size: 16px;\r\n    cursor: pointer;\r\n  }\r\n  </style>\r\n  "],"mappings":";AAgBE,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,UAAU;EAChBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,IAAI;MACZC,QAAQ,EAAE,EAAE;MACZC,YAAY,EAAE,IAAI;MAClBC,eAAe,EAAE,EAAE;MACnBC,UAAU,EAAE,EAAE;MACdC,YAAY,EAAE,IAAI;MAClBC,QAAQ,EAAE;IACZ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,YAAYA,CAACC,KAAK,EAAE;MAClB,IAAI,CAACJ,YAAW,GAAII,KAAK,CAACC,MAAM,CAACC,KAAK,CAAC,CAAC,CAAC;IAC3C,CAAC;IACD,MAAMC,UAAUA,CAAA,EAAG;MACjB,IAAI,CAAC,IAAI,CAACP,YAAY,EAAE,OAAO,IAAI,CAACC,QAAQ;MAE5C,MAAMO,QAAO,GAAI,IAAIC,QAAQ,CAAC,CAAC;MAC/BD,QAAQ,CAACE,MAAM,CAAC,MAAM,EAAE,IAAI,CAACV,YAAY,CAAC;MAE1C,IAAI;QACF,MAAMW,QAAO,GAAI,MAAMnB,KAAK,CAACoB,IAAI,CAAE,GAAEC,OAAO,CAACC,GAAG,CAACC,mBAAoB,SAAQ,EAAEP,QAAQ,EAAE;UACvFQ,OAAO,EAAE;YACP,cAAc,EAAE;UAClB;QACF,CAAC,CAAC;QACF,OAAOL,QAAQ,CAACjB,IAAI,C